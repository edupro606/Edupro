
@{
    ViewBag.Title = "UserReg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper row-offcanvas row-offcanvas-left">
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Teacher Register
                <small>Account</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">teacher registration</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">

                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Teacher Registration</h3>
                        </div><!-- /.box-header -->
                        <!-- form start -->
                        <form role="form">
                            <div class="box-body">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-md-1">FirstName</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="FirstName" placeholder="Enter Name"></div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1">LastName</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="LastName" placeholder="Enter Name"></div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1">ContactNo</div>
                                        <div class="col-md-2"><input type="text" class="form-control" data-inputmask='"mask": "999-9999"' data-mask /></div>
                                        <div class="col-md-1"></div>

                                    </div>
                                </div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-md-1">Address1</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="Add1" placeholder="Enter Address"></div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1">Address2</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="Add2" placeholder="Enter Address"></div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1">State</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="State" placeholder="Enter State" /></div>
                                        <div class="col-md-1"></div>

                                    </div>
                                </div>
                             
                                <div class="col-md-12">
                                    <br />
                                    <div class="form-group">
                                        <div class="col-md-1">District</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="District" placeholder="Enter District" /></div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1">Pincode</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="Pincode" placeholder="Enter Pincode" /></div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-1">Country</div>
                                        <div class="col-md-2"><input type="text" class="form-control" id="Country" placeholder="Enter Country" /></div>
                                        <div class="col-md-1"></div>
                                    </div>
                                </div>



                                <div class="col-md-12">
                                    <br />
                                    <br />
                                        <div class="form-group">
                                        <div class="col-md-3">Select Classes Alloted </div>
                                        
                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label for="exampleInputFile">Profile Picture</label>
                                        <input type="file" id="exampleInputFile">
                                        <p class="help-block">@*Example block-level help text here.*@</p>
                                    </div>
                                </div>
                              
                            </div><!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div><!-- /.box -->

                </div>   <!-- /.row -->
                </div>
        </section><!-- /.content --><!-- /.content -->
    </aside>

</div>

